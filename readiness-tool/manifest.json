{
  "manifest_version": 2,

  "name": "AMP Readiness Tool",
  "description": "A tool that allows the user to see at a glance, the various third party vendors on the page and whether they have AMP support",
  "version": "1.0",

  "browser_action": {
    "default_icon": "amp.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["getPagesSource.js"]
  },
  "web_accessible_resources": [
    "apps.json"
  ],
  "permissions": [
    "activeTab",
    "<all_urls>",
    "webNavigation",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}
